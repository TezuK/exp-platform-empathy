#:kivy 1.0.9

<RobotUI>:
    canvas:
        Color:
            rgba: .1, .1, 1, .9
        Line:
            width: 5
            rectangle: (508, 350, 290, 250)

<SystemUI>:
    canvas:
        Color:
            rgba: .1, 1, .1, .9
        Line:
            width: 4
            rectangle: (507, 256, 291, 88)

<HumanUI>:
    canvas:
        Color:
            rgba: 1, .1, .1, .9
        Line:
            width: 5
            rectangle: (508, 0, 290, 250)

<Player>:
    size: 20, 20 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<MainGame>:
    player: player_id
    size: root.size
    robotui: robot_ui
    humanui: human_ui
    systemui: system_ui

    canvas:
        Line:
            rectangle: 0, 100, 500, 500
            width: 5
        Line:
            points: 500, 0, 500, 100
            width: 5

    Player:
        id: player_id

    RobotUI:
        id: robot_ui

    HumanUI:
        id: human_ui

    SystemUI:
        id: system_ui

    RelativeLayout:
        id: emotion_layout
        size_hint: None, None
        size: 500, 100
        pos: 0, 0
        on_touch_down: root.emotion_press(*args)

        Image:
            source: 'img/angry.png'
            pos: 0 * 500/5 + 20, 20
            size: 50, 50
            size_hint: None, None


        Image:
            source: 'img/sad.png'
            pos: 1 * 500/5 + 20, 20
            size: 50, 50
            size_hint: None, None


        Image:
            source: 'img/neutral.png'
            pos: 2 * 500/5 + 20, 20
            size: 50, 50
            size_hint: None, None


        Image:
            source: 'img/less_happy.png'
            pos: 3 * 500/5 + 20, 20
            size: 50, 50
            size_hint: None, None


        Image:
            source: 'img/happy.png'
            pos: 4 * 500/5 + 20, 20
            size: 50, 50
            size_hint: None, None
